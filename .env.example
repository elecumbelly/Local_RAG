# Backend / API
NEXUS_API_KEY=change-me
NEXUS_DATABASE_URL=postgresql://nexus:nexus@localhost:5432/nexus
NEXUS_OLLAMA_URL=http://localhost:11434
NEXUS_ALLOW_ORIGINS=["http://localhost:3003"]

# Authentication
NEXUS_PASSWORD=nexus-local-rag  # Change this for production

# Container image pinning (set to tags or digests in production)
PGVECTOR_IMAGE=ankane/pgvector:latest
OLLAMA_IMAGE=ollama/ollama:latest

# Frontend (proxy uses server-side key)
NEXT_PUBLIC_API_BASE=http://localhost:8000
API_KEY=change-me
API_KEY_FILE=/path/to/api_key  # Alternative: use secrets file

